
<Winpop>:
    Label:
        text: "Congratz!"
        size_hint: 0.5, 0.5
        pos_hint: {"center_x":0.5, "center_y":0.7}
    Label:
        text: "You Won"
        font_size: 24
        size_hint: 0.7, 0.7
        pos_hint: {"center_x":0.5, "center_y":0.5}

<Lostpop>:
    Label:
        text: "You Lost"
        font_size: 24
        size_hint: 0.7, 0.7
        pos_hint: {"center_x":0.5, "center_y":0.5}

<Tiepop>:
    Label:
        text: "It's a Tie!"
        font_size: 24
        size_hint: 0.7, 0.7
        pos_hint: {"center_x":0.5, "center_y":0.5}

<BackgroundColor@Widget>
    background_color: 0.098, 0.098, 0.439, 0.5
    canvas.before:
        Color:
            rgba: 0.098, 0.098, 0.439, 0.5
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0.098, 0.098, 0.439, 0.5

<MainWindow>:
    GridLayout:
        cols: 1
        size: root.width, root.height

        BackgroundLabel
            background_color: 0.098, 0.098, 0.439, 0.5
            font_size: 34
            text:"Tic Tac Toe"
            color: 0.8, 0.8, 0.8, 1

        Label:

        GridLayout:
            cols: 5
            size: root.width, root.height


            Label:

            Button:
                id: lbl7
                background_color: 0, 0, 0, 1
                font_size: 30
                canvas:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Line:
                        rectangle: (self.x, self.y, self.width*3, 0)
                color: 0.8, 0.8, 0.8, 1
                text: ' '
                on_release:
                    root.press('7')

